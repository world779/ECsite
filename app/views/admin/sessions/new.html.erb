<span style="background-color:#dcdcdc; margin-left:30px; font-size:25px;">管理者ログイン</span><br><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-sm-2"><%= f.label :メールアドレス%></div>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2"><%= f.label :パスワード%></div>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>


  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit "ログイン", class:"btn btn-info" %>
    </div>
  </div>
<% end %>


