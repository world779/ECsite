<span style="background-color:#dcdcdc; margin-left:30px; font-size:25px;">ジャンル一覧・追加</span>

<%= form_for(@genre, url: admin_genres_path) do |f| %>
	<% if @genre.errors.any? %>
	<h3><%= @genre.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @genre.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	<% end %><br><br>
	 ジャンル
	 <%= f.text_field :name %>　
	 <%= f.radio_button :is_active, true %>有効
	 <%= f.radio_button :is_active, false %>無効　
	 <%= f.submit "追加", class:"btn btn-info"%>
<% end %><br>

<table class="table">
	<thead class="thead-light">
		<tr><th>ジャンル</th><th>状態</th><th></th></tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td>
					<% if genre.is_active==true %>有効
					<% else %>無効
					<% end %>
				</td>
				<td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-info" %></td>
			</tr>
		<% end %>
	</tbody>
</table>