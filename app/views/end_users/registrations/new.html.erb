<span style="background-color:#dcdcdc; margin-left:30px; font-size:25px;">新規会員登録</span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %><br>

<div class="row">
  <div class="col-sm-2"><%= f.label :名前%></div>
  <div class="col-sm-4">
    　(姓)
    <%= f.text_field :last_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  <div class="col-m-6">
    　　(名)
    <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2"><%= f.label :フリガナ%></div>
  <div class="col-sm-4">
    (セイ)
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>


  <div class="col-sm-6">
    (メイ)
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2"><%= f.label :メールアドレス %></div>
  <div class="col-sm-10" style="padding-left:55px;">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2"><%= f.label :郵便番号%>(ハイフンなし)</div>
  <div class="col-sm-10" style="padding-left:55px;">
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2"><%= f.label :住所 %></div>
  <div class="col-sm-10" style="padding-left:55px;">
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2"><%= f.label :電話番号%>(ハイフンなし)</div>
  <div class="col-sm-10" style="padding-left:55px;">
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>
</div>



<div class="row">
  <div class="col-sm-2">
    <%= f.label :パスワード%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
  </div>
  <div class="col-sm-10" style="padding-left:55px;">
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2"><%= f.label :パスワード%>(確認用)</div>
  <div class="col-sm-10" style="padding-left:55px;">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div><br>

<div class="col-sm-4"></div>
<%= f.submit "新規会員登録", class:"btn btn-success" %>

<% end %>


<span style="background-color:#dcdcdc; margin-left:180px; font-size:25px;">既に登録済みの方</span><br>
<%= link_to 'こちら' ,end_user_session_path, class:"text-danger"%>からログインしてください。
