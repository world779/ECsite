<%= render "public/end_users/nav_name" %>
<span style="background-color:#dcdcdc; margin-left:30px; font-size:25px;">登録情報編集</span><br><br>


<%= form_for(current_end_user) do |f| %>
<div class="row">
	<% if current_end_user.errors.any? %>
		<h3><%= current_end_user.errors.count %>errors occurrence</h3>

		<ul>
			<% current_end_user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<div class="row">
	<div class="col-sm-2"><%= f.label :名前%></div>
	<div class="col-sm-4">
		　(姓)
		<%= f.text_field :last_name, autofocus: true, autocomplete: "first_name" %>
	</div>
	<div class="col-m-6">
		　　(名)
		<%= f.text_field :first_name, autofocus: true, autocomplete: "last_name" %>
	</div>
</div>

<div class="row">
	<div class="col-sm-2"><%= f.label :フリガナ%></div>
	<div class="col-sm-4">
		(セイ)
		<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
	</div>


	<div class="col-sm-6">
		(メイ)
		<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
	</div>
</div>

<div class="row">
	<div class="col-sm-2"><%= f.label :メールアドレス %></div>
	<div class="col-sm-10" style="padding-left:55px;">
		<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	</div>
</div>

<div class="row">
	<div class="col-sm-2"><%= f.label :郵便番号%>(ハイフンなし)</div>
	<div class="col-sm-10" style="padding-left:55px;">
		<%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
	</div>
</div>

<div class="row">
	<div class="col-sm-2"><%= f.label :住所 %></div>
	<div class="col-sm-10" style="padding-left:55px;">
		<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
	</div>
</div>

<div class="row">
	<div class="col-sm-2"><%= f.label :電話番号%>(ハイフンなし)</div>
	<div class="col-sm-10" style="padding-left:55px;">
		<%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
	</div>
</div><br>

<div class="col-sm-3"></div>
<div class="col-sm-4"><%= f.submit "編集内容を保存する", class:"btn btn-info" %></div>
<div class="col-sm-5"><%= link_to "退会する", withdraw_confirm_end_user_path, class:"btn btn-danger" %></div>
<% end %>
